{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    // EsLint
    "no-unused-vars": "warn",
    "no-console": "off",
    "linebreak-style": "off",
    "comma-dangle": ["error", {
      "functions": "never"
    }],
    "no-use-before-define": "off",

    // JSX
    "jsx-a11y/media-has-caption": "off",

    // React
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-one-expression-per-line": "off",
    "react/function-component-definition": "off",
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
